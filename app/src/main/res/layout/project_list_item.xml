<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="新"
            android:textColor="#0072ff"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="弘扬" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_rect"
            android:padding="3dp"
            android:textColor="#0072ff"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="问答" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="2012-12-13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_pro"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chapter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="湿哒哒湿&quot;哒哒湿哒哒湿哒哒湿哒哒湿哒哒湿哒哒湿哒哒湿哒哒湿哒哒湿哒哒" />


            <TextView
                android:id="@+id/tv_chapter_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textSize="10sp"
                tools:text="都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固都是根深蒂固蒂固都是根深蒂固都是根深蒂固都是根深蒂固" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_chapter_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="置顶"
            android:textColor="#ff7500"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_chapter_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            tools:text="问答·官方" />


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--        <android.support.v7.widget.AppCompatCheckBox-->
        <!--            android:id="@+id/cb_zan"-->
        <!--            android:layout_width="20dp"-->
        <!--            android:layout_height="20dp"-->
        <!--            android:background="@drawable/like_selector"-->
        <!--            android:button="@null" />-->
        <com.ldoublem.thumbUplib.ThumbUpView
            android:id="@+id/tpv_zan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cracksColor="@color/color_ff3f00"
            app:edgeColor="@color/color_ff3f00"
            app:fillColor="@color/color_ff3f00"
            app:unlikeType="1" />
    </LinearLayout>

</LinearLayout>